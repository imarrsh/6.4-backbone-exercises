<form id="person-data" action="">

  <div class="form-group">
    <div class="row">
      <div class="col-md-4">
        <input type="text" name="firstName" placeholder="First Name" class="form-control">
      </div>
      <div class="col-md-4">    
        <input type="text" name="lastName" placeholder="Last Name" class="form-control">
      </div>
      <div class="col-md-4">  
        <input type="text" name="title" placeholder="Title" class="form-control">
      </div>
    </div>
  </div>
  
  <div class="form-group">
    <div class="row">  
      <div class="col-md-6">
        <input type="text" name="address1" placeholder="Street Address" class="form-control">
      </div>
      <div class="col-md-6">    
        <input type="text" name="address2" placeholder="Apt, Ste Number" class="form-control">
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-4">
        <input type="text" name="city" placeholder="City" class="form-control">
      </div>
      <div class="col-md-4">    
        <input type="text" name="state" placeholder="State" class="form-control">
      </div>
      <div class="col-md-4">  
        <input type="text" name="zip" placeholder="Zip" class="form-control">
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-5">
        <input type="text" name="phone" placeholder="Phone Number" class="form-control">
      </div>
      <div class="col-md-5">    
        <input type="text" name="email" placeholder="Email Address" class="form-control">
      </div>
        <div class="col-md-2">    
        <input type="submit" value="Add Person" class="btn btn-primary">
      </div>
    </div>
  </div>


  </div>
</form>